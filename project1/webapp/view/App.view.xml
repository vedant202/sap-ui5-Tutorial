<mvc:View 
    controllerName="project1.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    <Shell >
      <App >
      <pages>
        <Page title="{i18n>homePageTitle}">
          <content >
            <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin"
							width="auto">
              <content>
                <Button id="button" class="sapUiSmallMarginEnd" text="{i18n>showHelloButtonText}" press=".onShowHello"/>
                <Input
                  value="{/recipient/name}"
                  description="Hello {/recipient/name}"
                  valueLiveUpdate="true"
                  width="60%"/>

                <Text
									text="Hello {/recipient/name}"
									class="sapUiSmallMargin"/>
              </content>

            </Panel>
          </content>
        </Page>
      </pages>
    </App>
    </Shell>
    

    <Text id="text1" text="Hello World world 2" />

    
    
</mvc:View>

